<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- General -->
    <system:String x:Key="Loading">Carga...</system:String>

    <!-- Main Window -->
    <system:String x:Key="WalletDetected">Billetera detectada</system:String>
    <system:String x:Key="WalletDetectedPlural">Carteras detectadas</system:String>
    <system:String x:Key="WalletColumnHeader">Billetera</system:String>
    <system:String x:Key="LastScannedHeader">Último escaneo</system:String>
    <system:String x:Key="NetworkActivityHeader">Actividad de la red</system:String>
    <system:String x:Key="NetworkActivityText">Vista</system:String>
    <system:String x:Key="DragAndDropText">Arrastre los archivos ejecutables aquí antes de instalar nuevas billeteras para verificar la autenticidad</system:String>

    <!-- Help Window -->
    <system:String x:Key="How">¿Cómo verifica Branta mis billeteras?</system:String>
    <system:String x:Key="HowDetails">Branta ejecuta el algoritmo SHA-256 en su billetera y luego lo compara con el SHA-256 verificado por PGP. Si los hashes coinciden, es muy probable que tenga una billetera auténtica. Si no coinciden, debería considerar reinstalar la billetera desde el sitio web de los desarrolladores.</system:String>
    <system:String x:Key="LearnMore">¿Cómo puedo obtener más información?</system:String>
    <system:String x:Key="LearnMoreAt">Puede obtener más información sobre Branta en</system:String>

    <!-- Wallet Details Window -->
    <system:String x:Key="VerifiedMessage">Branta verificó a {0}.</system:String>
    <system:String x:Key="NotVerifiedMessage">Branta no pudo verificar a {0}.</system:String>
    <system:String x:Key="VersionNotSupportedMessage">Versión no compatible.</system:String>
    <system:String x:Key="NotFoundMessage">Branta no pudo localizar la instalación de {0}._NL_O bien la billetera no está instalada o está instalada en un directorio diferente desconocido para Branta.</system:String>
    <system:String x:Key="InstallingMessage">La verificación no se puede ejecutar porque la billetera se está instalando actualmente. Una vez que se complete la instalación, Branta intentará verificar la billetera.</system:String>

    <!-- Settings Window -->
    <system:String x:Key="SettingsTitle">Configuración</system:String>

    <system:String x:Key="ClipboardNotificationsTitle">Notificaciones del portapapeles</system:String>
    <system:String x:Key="BitcoinAddressesEnabledText">Notificar para direcciones de Bitcoin</system:String>
    <system:String x:Key="SeedPhraseEnabledText">Notificar para la frase semilla</system:String>
    <system:String x:Key="ExtendedPublicKeyEnabledText">Notificar para clave pública extendida</system:String>
    <system:String x:Key="PrivateKeyEnabledText">Notificar para la clave privada</system:String>
    <system:String x:Key="NostrPublicKeyEnabledText">Notificar para la clave pública de Nostr</system:String>
    <system:String x:Key="NostrPrivateKeyEnabledText">Notificar para la clave privada de Nostr</system:String>

    <system:String x:Key="WalletVerificationTitle">Verificación de billetera</system:String>
    <system:String x:Key="VerifyEveryText">Verifique cada</system:String>
    <system:String x:Key="LaunchingWalletEnabledText">Notificar el estado al iniciar la billetera</system:String>
    <system:String x:Key="WalletStatusChangeEnabledText">Notificar el estado en caso de cambio de estado</system:String>

    <!-- Network Activity Window -->
    <system:String x:Key="Connections">Conexiones</system:String>
    <system:String x:Key="InsufficientPrivileges">Se requieren derechos de administrador para esta función.</system:String>
    <system:String x:Key="ProcessId">ID de proceso</system:String>
    <system:String x:Key="IpAddress">Dirección IP</system:String>

    <!--Installer Notifications -->
    <system:String x:Key="InstallerValid">El instalador es válido.</system:String>
    <system:String x:Key="InstallerInvalid">El instalador no es válido o no es compatible.</system:String>

    <!-- Other Notifications -->
    <system:String x:Key="UpdateApp">Branta versión {0} está disponible.</system:String>

</ResourceDictionary> 